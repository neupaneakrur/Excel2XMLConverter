@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Excel to XML Converter</h1>
    <p class="lead">Convert Excel worksheet to XML format</p>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form id="uploadForm" method="post" enctype="multipart/form-data" action="/Home/Upload">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="inputFile" name="inputFile" accept=".xls, .xlsx">
                </div>
                <button type="submit" class="btn btn-primary mt-3">Convert to XML</button>
            </form>
        </div>
    </div>
</div>

